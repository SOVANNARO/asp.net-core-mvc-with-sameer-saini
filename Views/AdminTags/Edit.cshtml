@model asp_net_core_mvc.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div>
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" id="id" asp-for="Id" disabled />
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>